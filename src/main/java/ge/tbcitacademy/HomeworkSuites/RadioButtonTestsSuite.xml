<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="RadioButtonTestsSuite" parallel="tests" thread-count="3" >
    <test name="FirefoxTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="ge.tbc.itacademy.Tests.RadioButtonTests">
                <methods>
                    <include name="radioButtonTests"/>
                    <include name="falseInfo"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="ge.tbc.itacademy.Tests.RadioButtonTests"/>
        </classes>
    </test>

    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="ge.tbc.itacademy.Tests.RadioButtonTests"/>
        </classes>
    </test>
</suite>